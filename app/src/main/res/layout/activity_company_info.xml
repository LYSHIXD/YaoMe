<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_company_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.example.administrator.yaome.CompanyInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/iconBackWidth"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_arrow_back"
            android:layout_marginLeft="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业信息"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textColor="#212121"/>
        </LinearLayout>
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginBottom="17dp"
            android:background="#999"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资产信息"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textColor="#212121"/>
        </LinearLayout>
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginBottom="17dp"
            android:background="#999"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交审核"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textColor="#212121"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#fff">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="企业全称"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:layout_marginLeft="24dp"
                    android:textSize="30sp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textColor="#212121"
                    android:gravity="center"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textSize="30sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#fff">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="企业注册地址"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:layout_marginLeft="24dp"
                    android:textSize="30sp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textColor="#212121"
                    android:gravity="center"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textSize="30sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#fff">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="企业注册资本"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:layout_marginLeft="24dp"
                    android:textSize="30sp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textColor="#212121"
                    android:gravity="center"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textSize="30sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#fff">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="注册时间"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:layout_marginLeft="24dp"
                    android:textSize="30sp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textColor="#212121"
                    android:gravity="center"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textSize="30sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#fff">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="法人姓名"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:layout_marginLeft="24dp"
                    android:textSize="30sp"/>
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textColor="#212121"
                    android:gravity="center"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textSize="30sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#fff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="手机号码"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:layout_marginLeft="24dp"
                    android:textSize="30sp"/>
                <EditText
                    android:id="@+id/phoneNum_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textColor="#212121"
                    android:inputType="number"
                    android:gravity="center"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textSize="30sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#fff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="短信验证码"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:layout_marginLeft="24dp"
                    android:textSize="30sp"/>
                <EditText
                    android:id="@+id/massageNum_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:textColor="#212121"
                    android:inputType="number"
                    android:gravity="center"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textSize="30sp"/>
                <Button
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="24dp"
                    android:text="获取验证码"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_red_shape2"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#fff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="身份证号"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:layout_marginLeft="24dp"
                    android:textSize="30sp"/>

                <EditText
                    android:id="@+id/idNum_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#212121"
                    android:textSize="30sp"
                    android:inputType="number"
                    android:gravity="center"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#fff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="企业现状"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:layout_marginLeft="24dp"
                    android:textSize="30sp"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="90dp"
                    android:textColor="#212121"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_width="@dimen/iconDownWidth"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_arrow_down"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#fff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="企业资料"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:layout_marginLeft="24dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_width="@dimen/iconRightWidth"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_rignt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#fff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="身份证信息"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:layout_marginLeft="24dp"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/upload_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="未上传"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="#212121"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_width="@dimen/iconRightWidth"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_rignt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>

            <Button
                android:id="@+id/next_bt"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginRight="85dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:text="下一步"
                android:textColor="#fff"
                android:textSize="30sp"
                android:background="@drawable/button_red_shape"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
