<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_psw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.example.administrator.yaome.ChangeLoginPswActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleWidgetHeight">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/iconBackWidth"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_arrow_back"
            android:layout_marginLeft="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/changeLoginPsw"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="原密码"
            android:gravity="center"
            android:textSize="@dimen/stairItemSize"
            android:textColor="@color/colorStairItem"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_color_shape2">
            <EditText
                android:id="@+id/oldPsw_et"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入原密码"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:textColorHint="#999"
                android:textSize="@dimen/secondLevleItemSize"
                android:textColor="@color/colorSecondItem"
                android:inputType="number"
                android:textCursorDrawable="@null"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="新密码"
            android:textSize="@dimen/stairItemSize"
            android:textColor="@color/colorStairItem"
            android:gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_color_shape2">

            <EditText
                android:id="@+id/new_psw_et"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入新密码"
                android:textColorHint="#999"
                android:background="@null"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/secondLevleItemSize"
                android:textColor="@color/colorSecondItem"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/new_psw_iv"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_password"
                android:layout_marginRight="24dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="新密码"
            android:textSize="@dimen/stairItemSize"
            android:textColor="@color/colorStairItem"
            android:gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_color_shape2">
            <EditText
                android:id="@+id/new_again_psw_et"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入新密码"
                android:textColorHint="#999"
                android:background="@null"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/secondLevleItemSize"
                android:textColor="@color/colorSecondItem"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/new_again_psw_iv"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_password"
                android:layout_marginRight="24dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="50dp"
        android:text="保存"
        android:textSize="25sp"
        android:textColor="#fff"
        android:background="@drawable/button_red_shape"/>
</LinearLayout>



