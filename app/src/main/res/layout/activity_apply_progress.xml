<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_apply_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.example.administrator.yaome.ApplyProgressActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleWidgetHeight"
        android:background="#fff">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/iconBackWidth"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_arrow_back"
            android:layout_marginLeft="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请进度"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/all_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FD3D09">
            <Button
                android:id="@+id/all_bt"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:background="#fff"
                android:textSize="25sp"
                android:text="全部"
                android:textColor="#FD3D09"
                 />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/audit_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/audit_bt"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:background="#fff"
                android:textSize="25sp"
                android:text="审核中"
                android:textColor="#212121"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/finish_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/finish_bt"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:background="#fff"
                android:textSize="25sp"
                android:text="已完成"
                android:textColor="#212121"/>
        </LinearLayout>
    </LinearLayout>


















</LinearLayout>
