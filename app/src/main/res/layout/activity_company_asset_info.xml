<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_asset_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.example.administrator.yaome.CompanyAssetInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleWidgetHeight"
        android:background="#fff">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/iconBackWidth"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_arrow_back"
            android:layout_marginLeft="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资产信息"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_1_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textColor="#212121"/>
        </LinearLayout>
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginBottom="17dp"
            android:background="#999"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_2_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资产信息"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textColor="#212121"/>
        </LinearLayout>
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginBottom="17dp"
            android:background="#999"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交审核"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textColor="#212121"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <RelativeLayout
        android:id="@+id/company_type_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemWidgetHeight"
        android:background="#fff">

        <TextView
            android:id="@+id/company_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/secondLevleItemSize"
            android:textColor="@color/colorSecondItem"/>
        <ImageView
            android:layout_width="@dimen/iconDownWidth"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_arrow_down"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="企业类型"
            android:gravity="center"
            android:textSize="@dimen/stairItemSize"
            android:textColor="@color/colorStairItem"
            android:layout_marginLeft="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            android:id="@+id/textView" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>

    <RelativeLayout
        android:id="@+id/company_size_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemWidgetHeight"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="企业规模"
            android:gravity="center"
            android:textSize="@dimen/stairItemSize"
            android:textColor="@color/colorStairItem"
            android:layout_marginLeft="24dp" />
        <TextView
            android:id="@+id/company_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/secondLevleItemSize"
            android:textColor="@color/colorSecondItem"/>
        <ImageView
            android:layout_width="@dimen/iconDownWidth"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_arrow_down"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <RelativeLayout
        android:id="@+id/company_value_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemWidgetHeight"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="企业总价值"
            android:gravity="center"
            android:textSize="@dimen/stairItemSize"
            android:textColor="@color/colorStairItem"
            android:layout_marginLeft="24dp" />
        <EditText
            android:id="@+id/company_value_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorSecondItem"
            android:textSize="@dimen/secondLevleItemSize"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:text="万元"
            android:gravity="center"
            android:textSize="@dimen/stairItemSize"
            android:textColor="@color/colorStairItem"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <RelativeLayout
        android:id="@+id/company_income_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemWidgetHeight"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="年收入"
            android:gravity="center"
            android:textSize="@dimen/stairItemSize"
            android:textColor="@color/colorStairItem"
            android:layout_marginLeft="24dp" />
        <EditText
            android:id="@+id/company_income_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/secondLevleItemSize"
            android:textColor="@color/colorSecondItem"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:text="万元"
            android:gravity="center"
            android:textSize="@dimen/stairItemSize"
            android:textColor="@color/colorStairItem"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <RelativeLayout
        android:id="@+id/company_debt_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemWidgetHeight"
        android:background="#fff">

        <TextView
            android:id="@+id/company_debt_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/secondLevleItemSize"
            android:textColor="@color/colorSecondItem"/>
        <ImageView
            android:layout_width="@dimen/iconDownWidth"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_arrow_down"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="企业债务信息"
            android:gravity="center"
            android:textSize="@dimen/stairItemSize"
            android:textColor="@color/colorStairItem"
            android:layout_marginLeft="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>

    <RelativeLayout
        android:id="@+id/company_duration_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemWidgetHeight"
        android:background="#fff">

        <TextView
            android:id="@+id/company_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/secondLevleItemSize"
            android:textColor="@color/colorSecondItem"/>
        <ImageView
            android:layout_width="@dimen/iconDownWidth"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_arrow_down"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="企业经营时长"
            android:gravity="center"
            android:textSize="@dimen/stairItemSize"
            android:textColor="@color/colorStairItem"
            android:layout_marginLeft="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginRight="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginBottom="70dp"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="30sp"
        android:background="@drawable/button_red_shape"/>
</LinearLayout>
